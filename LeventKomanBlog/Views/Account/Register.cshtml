@model LeventKomanBlog.Models.User

@{
    ViewBag.Title = "Kayıt Sayfası";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/validation-summary.css" rel="stylesheet" />
<link href="~/Content/login-register.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Kayıt Formu</h1>
                </div>
                <div class="main-content">
                    @Html.ValidationSummary(false)

                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Adınız...", @required = "" })

                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Surname, new { @class = "form-control", placeholder = "Soyadınız...", @required = "" })

                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Kullanıcı adınız...", @required = "" })

                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "email adresiniz ...", @required = "", @type = "Email" })

                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "şifreniz...", type = "password", @required = "" })

                    </div>

                    <div class="form-group ">
                        <button href="#" type="submit" class="btn btn-danger btn-lg btn-block login-button">Kayıt Ol</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

}


