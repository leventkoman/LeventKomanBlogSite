@model IEnumerable<LeventKomanBlog.Models.Article>

@{
    ViewBag.Title = "Aradığınız İçerikteki Makaleler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Aradığınız İçerikteki Makaleler</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Kategori Adı")
        </th>
        <th>
            @Html.DisplayName("Başlık")
        </th>
        <th>
            @Html.DisplayName("İçerik")
        </th>
        <th>
            @Html.DisplayName("Fotoğraf")
        </th>
        <th>
            @Html.DisplayName("Tarih")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            <a href="/Home/ArticleDetails/@item.Id"> @Html.DisplayFor(modelItem => item.Title)</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contents)
        </td>
        <td>
            <img src="@item.Photo" class="img-rounded img-responsive" width="75" height="75"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
    </tr>
}

</table>
