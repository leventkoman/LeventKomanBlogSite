@model LeventKomanBlog.Models.Article

@{
    ViewBag.Title = "Makale Detayları";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h2>@ViewBag.Title</h2>
    </div>
</div>
<div>
    <div class="row">
        <div class="col-md-12">
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("Kategori")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Category.CategoryName)
                </dd>

                <dt>
                    @Html.DisplayName("Başlık")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Title)
                </dd>

                <dt>
                    @Html.DisplayName("İçerik")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Contents)
                </dd>

                <dt>
                    @Html.DisplayName("Fotoğraf")
                </dt>

                <dd>
                    <img width="175" height="75" src="@Model.Photo" />
                </dd>

                <dt>
                    @Html.DisplayName("Tarih")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Date)
                </dd>

                <dt>
                    @Html.DisplayName("Okunma Sayısı")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ReadsCount)
                </dd>

            </dl>
        </div>
        <p>
            @Bootstrap.LinkButton("/AdminArticle/Edit/" + Model.Id, "warning", string.Empty, string.Empty, "edit", " Düzenle")
            @Bootstrap.LinkButton("/AdminArticle/Index", "secondary", string.Empty, string.Empty, "arrow-left", " Geri Dön!")
        </p>
        <hr />
    </div>
</div>